<% include ./partials/header %>

<div class="ui main container text segment">
	<div class="ui huge header ">New Blog</div>
	<form class='ui form' action='/blogs' method="POST">
		<div class="field">
		<label>Title</label>
		<input type="text" name="blog[title]" placeholder="Name of your thread...">
		</div>			
		<div class="field">
		<label>Image</label>	
		<input type="text" name="blog[image]" placeholder="Enter Image URL">
		</div>
		<div class="field">
		<label>Description</label>
		<textarea name="blog[body]" placeholder="Description.."></textarea>   			
		</div>
		<input class='ui violet basic button big' type="submit" >
			
	</form>
</div>