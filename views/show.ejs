<% include ./partials/header %>

<div class="ui main container text segment">
	<div class="ui huge header "><%=blog.title%></div>
	<div class="ui top attached ">
		<div class="item">
			<img class='ui centered rounded image' src=<%=blog.image%>>
		</div>
		<div class="content">
			<span><%=blog.created.toDateString()%></span>		
		</div>
		<div class="description">
			<p> <%- blog.body%> </p>
		</div>
			<form class="buttonsDiv" action="/blogs/<%=blog._id%>/edit" method='GET'>
				<button class="ui violet basic button">EDIT</button>
			</form>
			<form class="buttonsDiv" action="/blogs/<%=blog._id%>?_method=DELETE" method='POST'>
				<button class="ui red basic button">DELETE</button>
			</form>
	</div>
	

		
</div>